QLabel {
    color: #ffffff;
    font-family: 'Lato';
}

QPushButton {
    background-color: #f79b24;
    border-top: 2px solid #f9ba68;
    color: #371e03;
    font-family: 'Lato';
    outline: none;
    text-transform: uppercase;
}

QPushButton:pressed {
}

#pinfo_cancel_btn,
#pwait_cancel_btn,
#wwait_goback_btn,
#wconfirm_cancel_btn {
    background-color: #b3b3b3;
    border-top: 2px solid #cbcbcb;
    color: #000;
}

#pamount_desc_lbl,
#pinfo_desc_lbl,
#pprogress_desc_lbl,
#preceipt_desc_lbl,
#pcancel_desc_lbl,
#wselect_desc_lbl,
#wwait_desc_lbl,
#wconfirm_desc_lbl,
#wreceipt_desc_lbl,
#error_desc_lbl {
    font-family: 'Lato Light';
    font-size: 28pt;
}

#main_stackedWidget {
    background-color: #323232;
}

#activation_server_lbl {
    color: #8fb1d4;
}

#idle_begin_btn {
    border: none;
    border-image: none;
    background-color: transparent;
    background-image: url(:/images/screen-idle.png);
    background-repeat: no-repeat;
    color: rgba(0, 0, 0, 0);
}
#idle_begin_lbl,
#idle_nfc_lbl {
    qproperty-text: '';
}

#standby_wake_btn {
    background-color: #000000;
    border-image: none;
    border-width: 0px;
}

#standby_bc_logo_image {
    qproperty-pixmap: url(':/images/bc_logo_small.png');
}

#standby_wake_lbl {
    color: #EEEEEE;
    font-weight: bold;
    text-transform: uppercase;
}

#pamount_desc_lbl {
    color: #7afff4;
}
#pamount_icon1_lbl {
